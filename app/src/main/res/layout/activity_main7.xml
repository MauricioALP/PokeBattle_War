<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main7Activity">

    <Button
        android:id="@+id/modohistoria"
        android:layout_width="285dp"
        android:layout_height="75dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="435dp"
        android:backgroundTint="#FF1300"
        android:text="MODO HISTORIA"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/fondo"
        app:layout_constraintEnd_toEndOf="@+id/fondo"
        app:layout_constraintStart_toStartOf="@+id/fondo"
        app:layout_constraintTop_toTopOf="@+id/fondo" />

    <Button
        android:id="@+id/modoversus"
        android:layout_width="282dp"
        android:layout_height="77dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="358dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="296dp"
        android:backgroundTint="#FF1300"
        android:text="MODO VERSUS"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/fondo"
